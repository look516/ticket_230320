<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ticket.booking.dao.BookingMapper">
	<select id="selectBookingListByUserId" parameterType="int" resultType="com.ticket.booking.domain.Booking">
		SELECT
			`id`
			,`showId`
			,`userId`
			,`bookingNumber`
			,`bookingDate`
			,`showDate`
			,`showTime`
			,`seat`
			,`seatPrice`
			,`seatGrade`
			,`isReserved`
			,`createdAt`
			,`updatedAt`
		FROM
			`booking`
		WHERE
			`userId` = #{userId}
	</select>
</mapper>